# ===========================
# API Configuration
# ===========================
API_VERSION=0.1.0
API_WORKERS=4  # Number of uvicorn workers (recommended: number of CPU cores)

# ===========================
# Database Configuration
# ===========================
POSTGRES_DB=rag_db
POSTGRES_USER=rag_user
POSTGRES_PASSWORD=rag_password
POSTGRES_PORT=5432
POSTGRES_HOST_AUTH_METHOD=md5
PGDATA=/var/lib/postgresql/data/pgdata

# Container network URL (used by API and Airflow)
POSTGRES_DATABASE_URL=postgresql+psycopg2://rag_user:rag_password@postgres:5432/rag_db

# ===========================
# OpenSearch Configuration
# ===========================
OPENSEARCH_DISCOVERY_TYPE=single-node
OPENSEARCH_JAVA_OPTS=-Xms512m -Xmx512m
OPENSEARCH_DISABLE_SECURITY_PLUGIN=true
OPENSEARCH_BOOTSTRAP_MEMORY_LOCK=true

# Container network URL
OPENSEARCH_HOST=http://opensearch:9200

# ===========================
# Ollama Configuration
# ===========================
OLLAMA_HOST=http://ollama:11434

# ===========================
# Airflow Configuration
# ===========================
AIRFLOW_HOME=/opt/airflow
